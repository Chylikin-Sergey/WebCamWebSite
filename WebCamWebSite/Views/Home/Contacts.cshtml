@model WebCamWebSite.Models.Info

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Контакты";
}
@section metatags {
    <meta name="description" content="Если у Вас есть вопросы, свяжитесь с нами, удобным для Вас способом и мы оперативно ответим на них." />
}
<div class="container body-content">
    <div style="background-color:white;border-radius:10px;padding-top:30px;padding-left:20px;padding-right:20px;padding-bottom:20px">
        <div style="text-align:center">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2748.853149982063!2d30.75229795121389!3d46.45160667902253!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40c633e7823f849f%3A0xc7b286171498ecd8!2z0L_RgNC-0YHQvy4g0KjQtdCy0YfQtdC90LrQviwg0J7QtNC10YHRgdCwLCDQntC00LXRgdGB0LrQsNGPINC-0LHQu9Cw0YHRgtGMLCA2NTAwMA!5e0!3m2!1sru!2sua!4v1609520016793!5m2!1sru!2sua" style="width:100%;height:450px;border:0;" frameborder="0" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>

        </div>
        <div class="row">
            <div class="col-sm-12 col-md-6 text-center text-xl-left text-md-left  flex-column tes">
                <h2> <span style="color:orangered">MMD</span> model's studio</h2>
                <p style="font-size:20px"><strong>Адрес:</strong><br>г. Одесса,  проспект Шевченко </p>
                <p style="font-size:20px"><strong>Телеграм по номеру:</strong><br><span>0500479492</span></p>
                <p style="font-size:20px"><strong>Direct:</strong><br><a href="https://www.instagram.com/vikkka_mika/" style="color:black;text-decoration:none">vikkka_mika/</a></p>
                <p class="Email"><strong>Email:</strong><br>mmd242020@gmail.com</p>
            </div>
            <div class="col-sm-12 col-md-6 flex-column justify-content-center tes">
                <div style="text-align:center">
                    <p style="font-size:20px">Если у Вас есть вопросы, свяжитесь с нами, удобным для Вас способом и мы оперативно ответим на них.</p>
                </div>
                <div class="d-flex justify-content-center">
                    @using (Html.BeginForm(new { @class = "d-flex flex-column justify-content-center" }))
                    {
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Имя *", @maxlength = "50", @required = "", @type = "text" } }) <br>
                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Фамилия *", @maxlength = "50", @required = "", @type = "text" } }) <br>
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Номер телефона *", @maxlength = "50", @required = "", @type = "text" } }) <br>
                        @Html.EditorFor(model => model.TelegramNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Телеграм номер *", @maxlength = "50", @type = "text" } }) <br>
                        @Html.EditorFor(model => model.Instagram, new { htmlAttributes = new { @class = "form-control", @placeholder = "Инстаграм *", @maxlength = "50", @type = "text" } }) <br>
                        @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @style = "min-height:50px", @rows = "5", @cols = "50", @placeholder = "Сообщение *", @maxlength = "255", @required = "", @type = "text" }) <br>
                        <div class="d-flex justify-content-center">
                            <input type="submit" id="sendmessage" name="sendmessage" value="Отправить" class="btn" style="border:solid 1px black">
                        </div>
                        <div id="callbackstatus"></div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#sendmessage").hover(function () {
        $("#sendmessage").css("background", "black");
        $("#sendmessage").css("color", "white");
    }, function () {
        $("#sendmessage").css("background", "white");
        $("#sendmessage").css("color", "black");
    });
</script>
